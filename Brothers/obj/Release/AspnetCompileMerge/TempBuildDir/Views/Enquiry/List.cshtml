@model Brothers.Entities.ViewModels.MstEnquiryViewModel

@{
    ViewBag.Title = "Enquiry Management";
    ViewBag.ViewHeader = "Enquiry List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<script src="~/Content/bootstrap-datetimepicker.min.js"></script>
<div class="col-md-12">
    <div class="well well-sm">
        <div class="col-md-12 pull-left" style="padding-top:10px; padding-left:0px;">
            <form method="get" action="@Url.Action("list","enquiry")" data-otf-ajax='true' data-otf-target="#DataGrid" id="eventForm">
                <div class="form-group col-md-3 col-xs-5 col-sm-4">
                    <div class="input-group col-md-12">
                        <div class="input-group date" id="datetimepicker5" data-date-format="dd M yyyy">
                            @Html.TextBox("EnquiryDate", null, new { @class = "date form-control col-md-4" })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-9 col-xs-7 col-sm-8 pull-left" >
                    <input type="submit" value="Search By Date" class="pull-left btn btn-danger" id="search" />
                </div>
            </form>
        </div>
        <div class="clearfix"></div>
    </div>
    @Html.Partial("_pvEnquiryList", Model)
</div>
<div class="col-md-12" style="display:none;" id="allList">
    <a href="@Url.Action("list","enquiry")">Show All Entries</a>
</div>

<div id='myModal' class='modal fade'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#datetimepicker5').datetimepicker({
            format: "dd M yyyy",
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });


    });

</script>

