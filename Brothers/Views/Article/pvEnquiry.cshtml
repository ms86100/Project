
@model Brothers.Entities.Models.utblMstArticleEnquire
<div class="sidebar right">

    <div class="widget">
        <div class="info-box margin-bottom-10">
            <p>GET IN TOUCH</p>
            @using (Html.BeginForm("Enquiry", "Article", new { id = "form" }))
            {
                @Html.ValidationSummary(true)
                <div class="text-danger " id="ErrorView" style="color:red"></div>

                <div class="margin-top-10">
                    <div class="input">

                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(model => model.Name, new { @class = "validate-required", @placeholder = "Your Name", @required = "required" })
                    </div>
                </div>
                <div>
                    <div class="input">

                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(model => model.Email, new { @class = "validate-required", @placeholder = "Your Email", @required = "required" })
                    </div>
                </div>
                <div>
                    <div class="input" style="margin-bottom:20px">
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(model => model.Phone, new { @class = "validate-required", @placeholder = "Phone" })
                    </div>
                </div>
                <div class="input">
                    <div class="booking-form-i textarea">
                        <div class="textarea-wrapper">
                            @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                            @Html.TextAreaFor(model => model.Message, new { @class = "validate-required validate-email", @placeholder = "Your message to us?" })
                        </div>
                    </div>


                </div>
                   <input type="submit" class="contacts-send" id="submit" value="Send" />

            }


        </div>
    </div>

</div>

