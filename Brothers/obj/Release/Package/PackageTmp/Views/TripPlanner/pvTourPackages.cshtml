@model Brothers.Entities.ViewModels.MstTourPackageGeneralViewAndSearch
<div id="DataGrid">
    @if (Model.MstTourPackageList.Count() > 0)
    {
        foreach (var item in Model.MstTourPackageList)
        {

        <div class="offer-slider-i catalog-i tour-grid fly-in">
            <a href="#" class="offer-slider-img">
                <img alt="" src="@item.DefaultPhoto" height="250" width="344">
                <span class="offer-slider-overlay">
                    <span class="offer-slider-btn"> view details</span><span></span>
                </span>
            </a>
            <div class="offer-slider-txt">
                <div class="offer-slider-link"><a href="#">@Html.DisplayFor(m => item.PackageName)</a></div>
                <div class="offer-slider-l">
                    <div class="offer-slider-location">Duration @item.TotalDays Days / @(item.TotalDays - 1) Nights</div>
                    <nav class="stars">
                        <ul>
                            <li><a href="#"><img alt="" src="~/MountPandim/img/star-b.png" /></a></li>
                            <li><a href="#"><img alt="" src="~/MountPandim/img/star-b.png" /></a></li>
                            <li><a href="#"><img alt="" src="~/MountPandim/img/star-b.png" /></a></li>
                            <li><a href="#"><img alt="" src="~/MountPandim/img/star-b.png" /></a></li>
                            <li><a href="#"><img alt="" src="~/MountPandim/img/star-a.png" /></a></li>
                        </ul>
                        <div class="clear"></div>
                    </nav>
                </div>
                <div class="offer-slider-r">
                    <b>@item.Price.ToString("#,##0") INR</b>
                    <span>tour price</span>
                </div>
                <div class="offer-slider-devider"></div>
                <div class="clear"></div>
                <div class="offer-slider-lead">@Html.DisplayFor(m => item.PackageRouting)</div>
            
                    <a href="@Url.Action("tourpackagedetails","tripplanner",new {id = @item.PackageID  })" class="cat-list-btn">Select</a>
            </div>
        </div>

        }

    }

  
</div>
